@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<style>
    .user-p{    position: relative;
    top: 108px;
    right: -18px;

    }
.phot {
    position: relative;
    right: -689px;
    top: -184px;
    width: 711px;
    height: 444px;
    opacity: 103%;
    background: url(/Images/photo5805426626383690627.jpg);
}
</style>
<h1 style="position: relative;top: 97px;right: -11px;font-family: math;font-weight: bolder;">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        @*<section>*@
            <form id="account" method="post">
                <h2 style="font-family: math;position: relative;top: 125px;right: -12px;">Use a local account to login.</h2>
                <hr style="position: relative;top: 106px;border-width: -200px;right: 99px;"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="user-p">
                    <div class="form-floating">
                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.UserName" class="form-label"></label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                
               
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                 
                     </div>

                 
                <div>
               
                    <div class="checkbox"style="position: relative;top: 16px;">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                   </div>
                 
                </div>
               
             
                    <div>
                        <button id="login-submit" type="submit"
                        class="w-100 btn btn-lg btn-primary" style="position: relative;top: 20px;right: 0px;">Login</button>
                    </div>
                </div>
                    <div class ="phot">

                    </div>
               
                <div style="position: relative;top: -295px;right: -20px;">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        @*</section>*@
    </div>
    </div>

@*<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
